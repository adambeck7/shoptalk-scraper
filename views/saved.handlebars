<!--Saved Episodes Page-->

<div class="container">

    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Saved Episodes</h1>
        </div>
    </div>
    <div class="col-md-12">
        {{#if article}}
        {{#each article}}
        <div class="card mt-4">
            <div class="card-header">
                <h4>{{this.title}}</h4>
            </div>
            <div class="card-body">

                <a href={{this.link}} target="_blank">{{this.link}}</a>
                <br><br>
                <button type="button" class="btn btn-success addNote" data-toggle="modal" data-target="#noteModal{{this._id}}"
                    data-id={{this._id}}>Annotate</button>
                <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Remove from Saved Episodes</button>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
                <h4>You haven't saved any episodes...yet.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!--Clicked Notes Modal-->
{{#each article}}
{{> notes-modal }}
{{/each}}