<!--Homepage-->
<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Shoptalk Show Scraper</h1>
        </div>

    </div>
    <div class="col-md-12">
        {{#if article}}
        {{#each article}}
        <div class="card mt-4">
            <div class="card-header">
                <h4>{{this.title}}</h4>
            </div>
            <div class="card-body">

                <a href={{this.link}} target="_blank">{{this.link}}</a>
                <br><br>
                <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Episode</button>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
                <h4>Click the "Get all Shoptalk Episodes" above to scrape all of their episodes. It's scraping over 300
                    episodes so be patient after clicking.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>